                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <i class="feather icon-unlock auth-icon" title="Login"></i>

                            </div>
                            @*<div class="input-group mb-3">
                                    @Html.TextBoxFor(model => model.objLoginViewModel.Companycode, new { @class = "form-control", placeholder = "Company Code", required = "" })

