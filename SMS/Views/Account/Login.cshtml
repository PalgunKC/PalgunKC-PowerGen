    <script>
        $(document).ready(function (e) {
            debugger;
            myfunction('@TempData["ErrorMessage"]');
            function myfunction(e) {
                if (e != '') {
                    new PNotify({
                        title: '',
                        text: e,
                        type: 'info'
                    });
                }

            }



        });
    </script>
