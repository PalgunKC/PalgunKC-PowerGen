                                @Html.TextBoxFor(model => model.objLoginViewModel.Username, new { @class = "form-control", placeholder = "Username", required = "" })
                            </div>
                            <div class="input-group mb-4">
                                @Html.PasswordFor(model => model.objLoginViewModel.Password, new { @class = "form-control", placeholder = "password", required = "" })
                            </div>
                            @*<div class="form-group text-left">
